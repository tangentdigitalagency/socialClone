    body
        .wrapper
            .row
                nav.col-2
                    a.logo(href='/')
                        i.fas.fa-drumstick-bite
                    a(href='/')
                        i.fas.fa-home
                    a(href='/search')
                        i.fas.fa-search
                    a(href='/notifications')
                        i.far.fa-bell
                    a(href='/messages')
                        i.far.fa-comment
                    a(href='/profile')
                        i.far.fa-user
                    a(href='/logout')
                        i.fas.fa-sign-out-alt

                .mainSectionContainer.col-10.col-md-8.col-lg-6
